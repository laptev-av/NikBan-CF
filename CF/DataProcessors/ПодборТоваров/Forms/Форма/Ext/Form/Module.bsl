					ОбщегоНазначенияКлиентСервер.СообщитьПользователю(ТекстСообщения);
					Результат = Истина;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	Возврат Результат;
