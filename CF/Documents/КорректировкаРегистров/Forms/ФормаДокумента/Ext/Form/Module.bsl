// Управляет настройкой состава доступных регистров.
//
&НаКлиенте
Процедура НастройкаСоставаРегистров(Команда)
    
    // &ЗамерПроизводительности
    ОценкаПроизводительностиРТКлиент.НачатьЗамер(
             Истина, "Документ.КорректировкаРегистров.Форма.ФормаВыбораРегистра.Открытие");

	СписокИспользуемыхРегистров = Новый СписокЗначений;

	Для Каждого Строка Из Объект.ТаблицаРегистров Цикл
		СписокИспользуемыхРегистров.Добавить(Строка.Имя);
	КонецЦикла;
	
	
	Обработчик = Новый ОписаниеОповещения("ОповещениеВыбораРегистров", ЭтотОбъект);
	Режим = РежимОткрытияОкнаФормы.БлокироватьОкноВладельца;
	
	ПараметрыФормы = Новый Структура("СписокИспользуемыхРегистров", СписокИспользуемыхРегистров);
	ОткрытьФорму("Документ.КорректировкаРегистров.Форма.ФормаВыбораРегистра",ПараметрыФормы,,,,, Обработчик, Режим);

КонецПроцедуры

