Процедура ОбработкаПроверкиЗаполнения(Отказ, ПроверяемыеРеквизиты)
	
	НастройкиФормированияОтчета = КомпоновщикНастроек.ПолучитьНастройки();
	ЗначениеПараметраПериод = НастройкиФормированияОтчета.ПараметрыДанных.НайтиЗначениеПараметра(Новый ПараметрКомпоновкиДанных("Период"));
	
	Если ЗначениеПараметраПериод <> Неопределено Тогда
		ЗначениеПараметраНачалоПериода = ЗначениеПараметраПериод.Значение.ДатаНачала;
		ЗначениеПараметраКонецПериода  = ЗначениеПараметраПериод.Значение.ДатаОкончания;
		Если ДеньНедели(Дата(ЗначениеПараметраНачалоПериода)) <> 1
			ИЛИ НЕ ЗначениеЗаполнено(Дата(ЗначениеПараметраНачалоПериода))
		Тогда
			Текст = НСтр("ru = 'Дата начала отчета должна быть днем недели ""Понедельник""'");
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
				Текст,
				ЭтотОбъект,
				,
				,
				Отказ
			);
		КонецЕсли;
		Если ДеньНедели(Дата(ЗначениеПараметраКонецПериода)) <> 7 Тогда
			ОбщегоНазначенияКлиентСервер.СообщитьПользователю(
				НСтр("ru = 'Дата окончания отчета должна быть днем недели ""Воскресенье""'"),
				ЭтотОбъект,
				,
				,
				Отказ
			);
		КонецЕсли;
	КонецЕсли;
КонецПроцедуры

Процедура ПриКомпоновкеРезультата(ДокументРезультат, ДанныеРасшифровки, СтандартнаяОбработка)
	
	ОбщегоНазначенияРТ.ВывестиДатуФормированияОтчета(ДокументРезультат);
	
КонецПроцедуры

